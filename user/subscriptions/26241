            <div id="postPreview:61806">
            






<div class="blogPreviewBox">

<div class="titleBox">

    <div>
                        <a class="left form_button_marginRight"  href="user/activity/28422" onclick="popUp('/user/view/28422', { popUpTitle:'Perfil',height:profilePopUpHeight });return false;">
            <img class="b-image--rounded" width="43" height="43" src="https://f69aa27b9b6c6702e27b-ffbfdeddb5f7166a1729dfea28599a63.ssl.cf3.rackcdn.com/avatar_28422_9ab6ca99f1889fe28a131b92d9270a35_prefeitura%20logo.jpg.jpg" alt="Prefeitura do Rio" />
