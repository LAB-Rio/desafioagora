		                var themes = jQuery('#category_themes-' + currentCategoryId).clone();
		                
		                if(themes.length > 0) {
		                	jQuery(".selected_category_themes-wrap").show();
		                	jQuery('#selected_category_themes').html(themes);
		                	
		                	jQuery(themes).change(function() {
		                		var selectedTheme = jQuery(this).find(':selected').val();
