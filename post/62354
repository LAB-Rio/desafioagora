		<script>
                    
            jQuery(".b-single-idea__comment-expand").on("click", function(e) {
                //console.log("expand comments");
                e.preventDefault();
                var parent = jQuery(this).attr("data-parent");
                jQuery("#comment-" + parent + " .b-single-idea__comment-hide").slideDown();
                jQuery("#b-single-idea__comment-expand-" + parent).slideUp();

            });

		    jQuery(".b-single-idea__comments-menu a").on('click', function(e){
		        e.preventDefault();
	
		        jQuery(".b-single-idea__comments-menu li").css({
		            "font-weight": "normal"
		        });
	
		        jQuery(this).closest("li").css({
		            "font-weight": "bold"
		        });
	
		        jQuery(".b-single-idea__comments-menu .line").animate({
		            left: jQuery(this).closest("li").position().left + 20,
		            width: jQuery(this).width()
		        });
                        
		        var filter = jQuery(this).attr("data-target");
                        
                jQuery('.b-single-idea__comments-list').mixItUp('filter', filter);
                        
		        /*jQuery(".b-single-idea__comments-list ul li").fadeIn();
		        if (filter != "all") {
		            jQuery(".b-single-idea__comments-list ul li").each(function(){
		                if (jQuery(this).attr("data-element") == filter) {
		                    jQuery(this).fadeIn();
		                } else {
		                    jQuery(this).fadeOut();
		                }
		            });
		        }
                        */
	
		    });
            
            Comment.addVoteClickListeners();
            Comment.addCommentFormOffClickListeners();
