<script type="text/javascript">
    var addthis_config=
            {
                data_track_addressbar: false,
                data_track_clickback:false
            }
    var addthis_share =
    {
       url: "https://desafioagorario.crowdicity.com/post/88458",
       title: "PPP de Iluminação Pública no Rio de Janeiro",
       description: " Acreditamos que um dos fatores que aumente deslocamentos a pé seja uma boa iluminação da via pública. \n Como já explanado em outra proposta aqui (https://desafioagorario.crowdicity.com/post/86576) que inspirou esta ideia, pedestres não circulam por ruas mal iluminadas ou que não tem nenhuma iluminação. \n Em vias públicas com baixa ou nenhuma luz, nenhum pedestre irá se deslocar por lá pois não...",
    }
    
        if (typeof addthis !== "undefined") {
            addthis.update('share', 'url', 'https://desafioagorario.crowdicity.com/post/88458');
            addthis.update('share', 'title', 'PPP de Iluminação Pública no Rio de Janeiro');
            addthis.update('share', 'description', ' Acreditamos que um dos fatores que aumente deslocamentos a pé seja uma boa iluminação da via pública. \n Como já explanado em outra proposta aqui (https://desafioagorario.crowdicity.com/post/86576) que inspirou esta ideia, pedestres não circulam por ruas mal iluminadas ou que não tem nenhuma iluminação. \n Em vias públicas com baixa ou nenhuma luz, nenhum pedestre irá se deslocar por lá pois não...');
        }
    
</script>
    
